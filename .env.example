# Server Configuration
NODE_ENV=development
PORT=8001
HOST=localhost

# Database Configuration
# Supported types: mysql, postgres, sqlite
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_NAME=recrowdly
# Set to 'true' only in development - automatically syncs database schema
DB_SYNCHRONIZE=false
# Optional: Custom paths for TypeORM artifacts
#DB_ENTITIES_PATH=dist/**/*.js
#DB_MIGRATIONS_PATH=dist/migrations/*.js
#DB_SUBSCRIBERS_PATH=dist/subscribers/*.js

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Rate Limiting
# Window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per window per IP
RATE_LIMIT_MAX=100

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_TWIML_APP_SID=your_twiml_app_sid

# LiveKit Configuration
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://your-project.livekit.cloud

# Geocoding Configuration (HERE API)
HERE_API_KEY=your_here_api_key

# Base URL used for callbacks/webhooks (e.g., Twilio)
API_BASE_URL=http://localhost:8001

# Deployment-specific (Replit, etc.)
REPLIT_DOMAINS=
REPLIT_CONNECTORS_HOSTNAME=
REPL_IDENTITY=
WEB_REPL_RENEWAL=
