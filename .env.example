# Server Configuration
NODE_ENV=development
PORT=8001
HOST=localhost

# Database Configuration
# Supported types: mysql, postgres, sqlite
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_NAME=recrowdly
# Set to 'true' only in development - automatically syncs database schema
DB_SYNCHRONIZE=false

# Database Paths (Optional - uses defaults if not set)
# DB_ENTITIES_PATH=src/entities/**/*.ts
# DB_MIGRATIONS_PATH=src/migrations/**/*.ts
# DB_SUBSCRIBERS_PATH=src/subscribers/**/*.ts

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Rate Limiting
# Window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per window per IP
RATE_LIMIT_MAX=100
